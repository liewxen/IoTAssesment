@model IoTAssesment.ViewModels.DeviceFormViewModel
@{
    ViewData["Title"] = $"Edit Device - {Model.Device.Name}";
}

<!-- Header Section -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 space-y-4 sm:space-y-0">
    <div>
        <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-edit text-amber-500 mr-3"></i>
            Edit Device
        </h1>
        <p class="text-gray-600 mt-2">Update device settings and configuration</p>
    </div>
    <div class="flex flex-wrap gap-3">
        <a href="/Devices/Details/@Model.Device.Id"
           class="inline-flex items-center px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-colors duration-200">
            <i class="fas fa-eye mr-2"></i>
            View Details
        </a>
        <a href="/Devices"
           class="inline-flex items-center px-4 py-2 border-2 border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-all duration-200 bg-white hover:bg-gray-50">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to List
        </a>
    </div>
</div>

<!-- Device Status Alert -->
<div class="mb-8">
    @if (Model.Device.IsOnline)
    {
        <div class="bg-green-50 border-l-4 border-green-500 rounded-lg p-4 shadow-sm">
            <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-wifi text-white"></i>
                    </div>
                </div>
                <div class="flex-1">
                    <h4 class="text-lg font-semibold text-green-900">Device Online</h4>
                    <p class="text-green-700 mt-1">This device is currently active and connected</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-amber-50 border-l-4 border-amber-500 rounded-lg p-4 shadow-sm">
            <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-white"></i>
                    </div>
                </div>
                <div class="flex-1">
                    <h4 class="text-lg font-semibold text-amber-900">Device Offline</h4>
                    <p class="text-amber-700 mt-1">Last seen @Model.Device.LastSeen.ToString("MMM dd, yyyy HH:mm") UTC</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Form Card -->
<div class="max-w-6xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="bg-gradient-to-r from-amber-50 to-yellow-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-microchip text-amber-600 mr-2"></i>
                Edit Device Information
            </h3>
        </div>
        <div class="p-8">
            <form asp-action="Edit" method="post" novalidate id="editDeviceForm">
                    @Html.AntiForgeryToken()
                    <input asp-for="Device.Id" type="hidden" />
                    <input asp-for="Device.CreatedAt" type="hidden" />
                    <input asp-for="Device.LastSeen" type="hidden" />
                    <input asp-for="Device.IsOnline" type="hidden" />

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                        <!-- Basic Information -->
                        <div class="space-y-6">
                            <div class="pb-4 border-b border-gray-200">
                                <h4 class="text-lg font-semibold text-gray-900 flex items-center">
                                    <i class="fas fa-info-circle text-blue-500 mr-2"></i>
                                    Basic Information
                                </h4>
                            </div>

                            <!-- Device Name -->
                            <div>
                                <label asp-for="Device.Name" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-tag text-gray-400 mr-1"></i> Device Name <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="Device.Name" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                                       placeholder="Enter device name" />
                                <span asp-validation-for="Device.Name" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Device Type -->
                            <div>
                                <label asp-for="Device.DeviceType" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-cogs text-gray-400 mr-1"></i> Device Type <span class="text-red-500">*</span>
                                </label>
                                <select asp-for="Device.DeviceType" 
                                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200">
                                    <option value="">-- Select Device Type --</option>
                                    @foreach (var type in Model.AvailableDeviceTypes)
                                    {
                                        <option value="@type" selected="@(Model.Device.DeviceType == type)">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="Device.DeviceType" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Location -->
                            <div>
                                <label asp-for="Device.Location" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-map-marker-alt text-gray-400 mr-1"></i> Location <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="Device.Location" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                                       placeholder="Device location" />
                                <span asp-validation-for="Device.Location" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Description -->
                            <div>
                                <label asp-for="Device.Description" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-file-alt text-gray-400 mr-1"></i> Description
                                </label>
                                <textarea asp-for="Device.Description" 
                                          class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                                          rows="3"
                                          placeholder="Describe what this device does..."></textarea>
                                <span asp-validation-for="Device.Description" class="text-red-500 text-sm mt-1 block"></span>
                            </div>
                        </div>

                        <!-- Technical Information -->
                        <div class="space-y-6">
                            <div class="pb-4 border-b border-gray-200">
                                <h4 class="text-lg font-semibold text-gray-900 flex items-center">
                                    <i class="fas fa-microchip text-indigo-500 mr-2"></i>
                                    Technical Details
                                </h4>
                            </div>

                            <!-- Serial Number -->
                            <div>
                                <label asp-for="Device.SerialNumber" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-barcode text-gray-400 mr-1"></i> Serial Number
                                </label>
                                <input asp-for="Device.SerialNumber" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                                       placeholder="SN-XXXX-XXXX" />
                                <span asp-validation-for="Device.SerialNumber" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Firmware Version -->
                            <div>
                                <label asp-for="Device.FirmwareVersion" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-code text-gray-400 mr-1"></i> Firmware Version
                                </label>
                                <input asp-for="Device.FirmwareVersion" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                                       placeholder="1.0.0" />
                                <span asp-validation-for="Device.FirmwareVersion" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Device Info -->
                            <div>
                                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                    <h5 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
                                        <i class="fas fa-info-circle text-gray-400 mr-2"></i>
                                        Device Information
                                    </h5>
                                    <div class="space-y-2 text-sm text-gray-600">
                                        <div class="flex justify-between">
                                            <span class="font-medium">Device ID:</span>
                                            <span class="text-gray-900">@Model.Device.Id</span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span class="font-medium">Created:</span>
                                            <span class="text-gray-900">@Model.Device.CreatedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span class="font-medium">Last Updated:</span>
                                            <span class="text-gray-900">@Model.Device.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- MQTT Credentials Section -->
                    <div class="col-span-1 lg:col-span-2 mt-8 pt-8 border-t border-gray-200">
                        <div class="pb-4 border-b border-gray-200 mb-6">
                            <h4 class="text-lg font-semibold text-gray-900 flex items-center">
                                <i class="fas fa-wifi text-indigo-500 mr-2"></i>
                                MQTT Connection Settings
                            </h4>
                            <p class="text-sm text-gray-600 mt-1">Configure device communication credentials</p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <!-- Client ID -->
                            <div>
                                <label asp-for="Device.ClientId" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-id-badge text-gray-400 mr-1"></i> Client ID <span class="text-red-500">*</span>
                                </label>
                                <input asp-for="Device.ClientId" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" 
                                       placeholder="e.g., device_temp_001" />
                                <span asp-validation-for="Device.ClientId" class="text-red-500 text-sm mt-1 block"></span>
                                <p class="text-sm text-gray-500 mt-2">
                                    <i class="fas fa-info-circle text-indigo-400 mr-1"></i>
                                    Unique identifier for MQTT
                                </p>
                            </div>

                            <!-- MQTT Username -->
                            <div>
                                <label asp-for="Device.MqttUsername" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-user text-gray-400 mr-1"></i> MQTT Username
                                </label>
                                <input asp-for="Device.MqttUsername" 
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" 
                                       placeholder="Optional username" />
                                <span asp-validation-for="Device.MqttUsername" class="text-red-500 text-sm mt-1 block"></span>
                                <p class="text-sm text-gray-500 mt-2">Leave blank if not required</p>
                            </div>

                            <!-- MQTT Password -->
                            <div>
                                <label asp-for="Device.MqttPassword" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-lock text-gray-400 mr-1"></i> MQTT Password
                                </label>
                                <input asp-for="Device.MqttPassword" 
                                       type="password"
                                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" 
                                       placeholder="Optional password" />
                                <span asp-validation-for="Device.MqttPassword" class="text-red-500 text-sm mt-1 block"></span>
                                <p class="text-sm text-gray-500 mt-2">Leave blank if not required</p>
                            </div>
                        </div>
                    </div>

                    <!-- Device Actions -->
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-bolt text-purple-500 mr-2"></i>
                            Device Actions
                        </h4>
                        <div class="flex flex-wrap gap-3">
                            <button type="button" 
                                    onclick="toggleDeviceStatus(@Model.Device.Id)"
                                    class="inline-flex items-center px-4 py-2.5 bg-purple-500 hover:bg-purple-600 text-white font-medium rounded-lg transition-colors duration-200">
                                <i class="fas fa-power-off mr-2"></i>
                                @(Model.Device.IsOnline ? "Set Offline" : "Set Online")
                            </button>
                            @* <button type="button" 
                                    onclick="requestSensorData(@Model.Device.Id)"
                                    class="inline-flex items-center px-4 py-2.5 bg-green-500 hover:bg-green-600 text-white font-medium rounded-lg transition-colors duration-200">
                                <i class="fas fa-sync mr-2"></i>
                                Request Fresh Data
                            </button> *@
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-4 sm:space-y-0">
                            <div class="flex flex-wrap gap-3">
                                <a href="@Url.Action("Details", new { id = Model.Device.Id })" 
                                   class="inline-flex items-center px-6 py-2.5 border-2 border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-all duration-200 bg-white hover:bg-gray-50">
                                    <i class="fas fa-times mr-2"></i>
                                    Cancel
                                </a>
                                <button type="submit" 
                                        class="inline-flex items-center px-6 py-2.5 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg">
                                    <i class="fas fa-save mr-2"></i>
                                    Update Device
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function toggleDeviceStatus(deviceId) {
            if (confirm('Are you sure you want to toggle the status of this device?')) {
                fetch(`/api/devices/${deviceId}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast(data.message || 'Device status toggled successfully', 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast(data.message || 'Failed to toggle device status', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Error occurred while toggling device status', 'error');
                });
            }
        }

