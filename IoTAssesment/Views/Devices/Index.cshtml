@model IoTAssesment.ViewModels.DeviceListViewModel
@{
    ViewData["Title"] = "Devices";
}

<!-- Header Section -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 space-y-4 sm:space-y-0">
    <div>
        <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-microchip text-blue-500 mr-3"></i>
            IoT Devices
        </h1>
        <p class="text-gray-600 mt-1">Manage and monitor your IoT device fleet</p>
    </div>
    <a href="@Url.Action("Create")"
       class="group flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
        <i class="fas fa-plus mr-2 group-hover:scale-110 transition-transform duration-200"></i>
        Add New Device
    </a>
</div>

<!-- Advanced Filters Section -->
<div class="bg-white rounded-xl shadow-lg border border-gray-100 mb-8 overflow-hidden">
    <div class="bg-gradient-to-r from-gray-50 to-blue-50 px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i class="fas fa-filter text-blue-500 mr-2"></i>
            Search & Filter
        </h3>
    </div>
    <div class="p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
            <!-- Search Input -->
            <div class="lg:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Search Devices</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text"
                           name="search"
                           value="@Model.SearchTerm"
                           placeholder="Search by name or serial number..."
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
                </div>
            </div>

            <!-- Device Type Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Device Type</label>
                <select name="deviceType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white">
                    <option value="">All Types</option>
                    @foreach (var type in Model.DeviceTypes)
                    {
                        <option value="@type" selected="@(Model.DeviceTypeFilter == type)">@type</option>
                    }
                </select>
            </div>

            <!-- Status Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select name="onlineStatus" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white">
                    <option value="">All Status</option>
                    <option value="true" selected="@(Model.OnlineStatusFilter == true)">Online</option>
                    <option value="false" selected="@(Model.OnlineStatusFilter == false)">Offline</option>
                </select>
            </div>

            <!-- Location Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                <select name="location" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white">
                    <option value="">All Locations</option>
                    @foreach (var location in Model.Locations)
                    {
                        <option value="@location" selected="@(Model.LocationFilter == location)">@location</option>
                    }
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col justify-end space-y-2">
                <button type="submit"
                        class="flex items-center justify-center px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-colors duration-200">
                    <i class="fas fa-search mr-2"></i>
                    Filter
                </button>
                <a href="@Url.Action("Index")"
                   class="flex items-center justify-center px-4 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-colors duration-200 bg-white hover:bg-gray-50">
                    <i class="fas fa-times mr-2"></i>
                    Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 bg-white p-4 rounded-lg border border-gray-200 space-y-3 sm:space-y-0">
    <div class="text-gray-600">
        Showing <span class="font-semibold text-gray-900">@Math.Min((Model.CurrentPage - 1) * Model.PageSize + 1, Model.TotalCount)</span> -
        <span class="font-semibold text-gray-900">@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)</span>
        of <span class="font-semibold text-gray-900">@Model.TotalCount</span> devices
    </div>
    <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-1">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium text-green-700">@Model.OnlineDevicesCount Online</span>
        </div>
        <div class="flex items-center space-x-1">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="text-sm font-medium text-red-700">@Model.OfflineDevicesCount Offline</span>
        </div>
    </div>
</div>

<!-- Devices Grid -->
@if (Model.Devices.Any())
{
    <!-- Sorting Options -->
    <div class="flex flex-wrap items-center justify-between mb-6 bg-white p-4 rounded-lg border border-gray-200">
        <div class="flex items-center space-x-1 text-sm text-gray-600">
            <i class="fas fa-sort mr-2"></i>
            <span class="font-medium">Sort by:</span>
        </div>
        <div class="flex flex-wrap items-center space-x-2">
            <a href="?sortBy=Name&sortDirection=@(Model.SortBy == "Name" && Model.SortDirection == "asc" ? "desc" : "asc")"
               class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium @(Model.SortBy == "Name" ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-700 hover:bg-gray-200") transition-colors duration-200">
                Name @if(Model.SortBy == "Name") { <i class="fas fa-sort-@(Model.SortDirection == "asc" ? "up" : "down") ml-1"></i> }
            </a>
            <a href="?sortBy=DeviceType&sortDirection=@(Model.SortBy == "DeviceType" && Model.SortDirection == "asc" ? "desc" : "asc")"
               class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium @(Model.SortBy == "DeviceType" ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-700 hover:bg-gray-200") transition-colors duration-200">
                Type @if(Model.SortBy == "DeviceType") { <i class="fas fa-sort-@(Model.SortDirection == "asc" ? "up" : "down") ml-1"></i> }
            </a>
            <a href="?sortBy=Location&sortDirection=@(Model.SortBy == "Location" && Model.SortDirection == "asc" ? "desc" : "asc")"
               class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium @(Model.SortBy == "Location" ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-700 hover:bg-gray-200") transition-colors duration-200">
                Location @if(Model.SortBy == "Location") { <i class="fas fa-sort-@(Model.SortDirection == "asc" ? "up" : "down") ml-1"></i> }
            </a>
            <a href="?sortBy=LastSeen&sortDirection=@(Model.SortBy == "LastSeen" && Model.SortDirection == "asc" ? "desc" : "asc")"
               class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium @(Model.SortBy == "LastSeen" ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-700 hover:bg-gray-200") transition-colors duration-200">
                Last Seen @if(Model.SortBy == "LastSeen") { <i class="fas fa-sort-@(Model.SortDirection == "asc" ? "up" : "down") ml-1"></i> }
            </a>
        </div>
    </div>

    <!-- Device Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        @foreach (var device in Model.Devices)
        {
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 card-hover overflow-hidden group">
                <!-- Device Header -->
                <div class="p-6 border-b border-gray-100">
                    <div class="flex items-start justify-between">
                        <div class="flex-1 min-w-0">
                            <h3 class="text-lg font-semibold text-gray-900 truncate group-hover:text-blue-600 transition-colors duration-200">
                                @device.Name
                            </h3>
                            @if (!string.IsNullOrEmpty(device.SerialNumber))
                            {
                                <p class="text-sm text-gray-500 mt-1">SN: @device.SerialNumber</p>
                            }
                            <div class="flex items-center space-x-2 mt-2">
                                <i class="fas fa-layer-group text-purple-500"></i>
                                <span class="text-sm font-medium text-purple-700">@device.DeviceType</span>
                            </div>
                        </div>
                        <div class="flex flex-col items-end space-y-2">
                            <!-- Status Badge -->
                            <div class="flex items-center space-x-2">
                                @if (device.IsOnline)
                                {
                                    <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                        @device.Status
                                    </span>
                                }
                                else
                                {
                                    <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                                        @device.Status
                                    </span>
                                }
                            </div>
                            <!-- Battery Level -->
                            @if (device.BatteryLevel.HasValue)
                            {
                                var batteryColor = device.BatteryLevel > 75 ? "green" :
                                                 device.BatteryLevel > 50 ? "yellow" :
                                                 device.BatteryLevel > 25 ? "orange" : "red";
                                var batteryIcon = device.BatteryLevel > 75 ? "battery-full" :
                                                device.BatteryLevel > 50 ? "battery-half" :
                                                device.BatteryLevel > 25 ? "battery-quarter" : "battery-empty";

                                <div class="flex items-center space-x-1 text-@(batteryColor)-600">
                                    <i class="fas fa-@(batteryIcon)"></i>
                                    <span class="text-sm font-medium">@device.BatteryLevel.Value.ToString("F1")%</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Device Details -->
                <div class="p-6 space-y-4">
                    <!-- Location -->
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-map-marker-alt text-indigo-500"></i>
                        <span class="text-sm text-gray-700">@device.Location</span>
                    </div>

                    <!-- Connection Quality -->
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-wifi text-blue-500"></i>
                        <span class="text-sm text-gray-700">@device.ConnectionQuality</span>
                    </div>

                    <!-- Last Seen -->
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-clock text-gray-500"></i>
                        <span class="text-sm text-gray-700">@device.LastSeen.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="p-6 pt-0">
                    <div class="flex flex-wrap gap-2">
                        <a href="@Url.Action("Details", new { id = device.Id })"
                           class="inline-flex items-center px-3 py-2 text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors duration-200"
                           title="View Details">
                            <i class="fas fa-eye mr-1"></i>
                            Details
                        </a>
                        <a href="@Url.Action("Edit", new { id = device.Id })"
                           class="inline-flex items-center px-3 py-2 text-sm font-medium text-amber-700 bg-amber-50 hover:bg-amber-100 rounded-lg transition-colors duration-200"
                           title="Edit">
                            <i class="fas fa-edit mr-1"></i>
                            Edit
                        </a>
                        <button type="button"
                                onclick="toggleDeviceStatus(@device.Id)"
                                class="inline-flex items-center px-3 py-2 text-sm font-medium text-purple-700 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors duration-200"
                                title="Toggle Status">
                            <i class="fas fa-power-off mr-1"></i>
                            Toggle
                        </button>
                        <a href="@Url.Action("Delete", new { id = device.Id })"
                           class="inline-flex items-center px-3 py-2 text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 rounded-lg transition-colors duration-200"
                           title="Delete">
                            <i class="fas fa-trash mr-1"></i>
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Modern Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Device pagination" class="mt-8">
            <div class="flex items-center justify-center space-x-2">
                @if (Model.CurrentPage > 1)
                {
                    <a href="?page=@(Model.CurrentPage - 1)"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                        <i class="fas fa-chevron-left mr-2"></i>
                        Previous
                    </a>
                }

                <div class="hidden sm:flex space-x-1">
                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        @if (i == Model.CurrentPage)
                        {
                            <span class="inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-500 text-white text-sm font-medium rounded-lg">
                                @i
                            </span>
                        }
                        else
                        {
                            <a href="?page=@i"
                               class="inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 text-sm font-medium rounded-lg transition-colors duration-200">
                                @i
                            </a>
                        }
                    }
                </div>

                <!-- Mobile pagination info -->
                <div class="sm:hidden">
                    <span class="text-sm text-gray-700 bg-white px-3 py-2 border border-gray-300 rounded-lg">
                        @Model.CurrentPage of @Model.TotalPages
                    </span>
                </div>

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <a href="?page=@(Model.CurrentPage + 1)"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                        Next
                        <i class="fas fa-chevron-right ml-2"></i>
                    </a>
                }
            </div>
        </nav>
    }
}
else
{
    <!-- Empty State -->
    <div class="text-center py-12">
        <div class="bg-white rounded-xl shadow-lg p-8 max-w-md mx-auto border border-gray-200">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-microchip text-2xl text-blue-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No devices found</h3>
            <p class="text-gray-600 mb-6">
                @(Model.SearchTerm != null || Model.DeviceTypeFilter != null || Model.OnlineStatusFilter != null || Model.LocationFilter != null
                    ? "No devices match your current filter criteria. Try adjusting your filters or search terms."
                    : "You haven't added any devices yet. Start by adding your first IoT device to begin monitoring.")
            </p>
            <div class="space-y-3">
                <a href="@Url.Action("Create")"
                   class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
                    <i class="fas fa-plus mr-2"></i>
                    Add Your First Device
                </a>
                @if (Model.SearchTerm != null || Model.DeviceTypeFilter != null || Model.OnlineStatusFilter != null || Model.LocationFilter != null)
                {
                    <div>
                        <a href="@Url.Action("Index")"
                           class="inline-flex items-center px-4 py-2 text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200">
                            <i class="fas fa-times mr-2"></i>
                            Clear all filters
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script>
        function toggleDeviceStatus(deviceId) {
            if (confirm('Are you sure you want to toggle the status of this device?')) {
                fetch(`/api/devices/${deviceId}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast(data.message || 'Device status toggled successfully', 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast(data.message || 'Failed to toggle device status', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Error occurred while toggling device status', 'error');
                });
            }
        }
    </script>
}