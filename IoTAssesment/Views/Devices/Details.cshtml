@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script>
        function toggleDeviceStatus(deviceId) {
            if (confirm('Are you sure you want to toggle the status of this device?')) {
                fetch(`/api/devices/${deviceId}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast(data.message || 'Device status toggled successfully', 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast(data.message || 'Failed to toggle device status', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Error occurred while toggling device status', 'error');
                });
            }
        }

        function requestSensorData(deviceId) {
            showToast('Fetching latest sensor data...', 'info');
            
            fetch(`/api/devices/${deviceId}/request-sensor-data`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast(data.message || 'Latest sensor data retrieved', 'success');
                    // Reload the page to show updated data
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showToast(data.message || 'Failed to fetch sensor data', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Error occurred while fetching sensor data', 'error');
            });
        }

        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            const text = element.textContent;
            
            navigator.clipboard.writeText(text).then(() => {
                showToast('Command copied to clipboard!', 'success');
            }).catch(err => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                textArea.style.position = 'fixed';
                textArea.style.left = '-999999px';
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    showToast('Command copied to clipboard!', 'success');
                } catch (err) {
                    showToast('Failed to copy command', 'error');
                }
                document.body.removeChild(textArea);
            });
        }

        // Auto-refresh every 30 seconds to show real-time updates
        setInterval(function() {
            location.reload();
        }, 30000);
    </script>

